<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jingbin.cloudreader"
    android:versionCode="12"
    android:versionName="1.8.2" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.example.jingbin.cloudreader.app.CloudReaderApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <!-- android:theme="@style/AppThemeSystem.NoActionBar" -->
        <activity
            android:name="com.example.jingbin.cloudreader.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.jingbin.cloudreader.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ViewBigPicTheme" >

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->
            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name="com.example.jingbin.cloudreader.ui.TransitionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ViewBigPicTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.jingbin.cloudreader.base.BaseActivity"
            android:label="@string/title_activity_base"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.jingbin.cloudreader.ui.one.TestActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyScrollPage" />
        <activity
            android:name="com.example.jingbin.cloudreader.ui.one.SlideActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyScrollPage" />
        <activity
            android:name="com.example.jingbin.cloudreader.ui.one.SlideScrollViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyScrollPage" />
        <activity
            android:name="com.example.jingbin.cloudreader.ui.one.SlideShadeViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyScrollPage" />
        <activity
            android:name="com.example.jingbin.cloudreader.ui.one.MovieDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyScrollPage" />
        <activity
            android:name="com.example.jingbin.cloudreader.view.viewbigimage.ViewBigImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ViewBigPicTheme" />
        <activity
            android:name="com.example.jingbin.cloudreader.view.webview.WebViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.jingbin.cloudreader.ui.one.DoubanTopActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.jingbin.cloudreader.ui.one.OneMovieDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyScrollPage" />
        <activity
            android:name="com.example.jingbin.cloudreader.ui.menu.NavHomePageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.jingbin.cloudreader.ui.menu.NavDeedBackActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.jingbin.cloudreader.ui.menu.NavAboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.jingbin.cloudreader.ui.book.child.BookDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.jingbin.cloudreader.ui.menu.NavDownloadActivity"
            android:screenOrientation="portrait" />

        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    </application>

</manifest>